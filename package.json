{
    "main": "server/dist/worker.js",
    "scripts": {
        "client-main": "parcel watch public/* -d client/devdist",
        "client-serviceWorker": "parcel watch serviceWorker/* -d client/devdist",
        "client-devserver": "cd client/devdist && http-server -p 1234",
        "client-plus-serviceWorker": "rm -rf client/devdist && mkdir client/devdist && npm-run-all --parallel client-main client-serviceWorker client-devserver",
        "client": "rm -rf client/devdist && parcel serve public/* -d client/devdist",
        "server-parcel": "parcel watch server/worker.tsx -d server/devdist",
        "server-cloudworker": "nodemon --watch server/devdist/worker.js --exec cloudworker --debug --kv-file STORE=store.json server/devdist/worker.js",
        "server-wrangler": "wrangler dev --env dev",
        "server": "npm-run-all --parallel server-parcel server-cloudworker",
        "build-client": "rm -rf client/dist/* && parcel build public/* -d client/dist",
        "build-server": "rm -rf server/dist/* && parcel build server/worker.tsx -d server/dist",
        "build": "npm-run-all --parallel build-client build-server",
        "deploy-test": "wrangler publish --env test",
        "publish": "wrangler publish --env live"
    },
    "dependencies": {
        "@cloudflare/kv-asset-handler": "^0.0.7",
        "@cloudflare/workers-types": "^1.0.6",
        "@fortawesome/fontawesome-svg-core": "^1.2.26",
        "@fortawesome/free-solid-svg-icons": "^5.12.0",
        "@fortawesome/react-fontawesome": "^0.1.8",
        "@sentry/browser": "5.15.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/classnames": "^2.2.10",
        "@types/cookie": "^0.3.3",
        "@types/html-entities": "^1.2.16",
        "@types/html-to-text": "^1.4.31",
        "@types/lodash": "^4.14.149",
        "@types/markdown-to-jsx": "^6.11.0",
        "@types/react": "^16.9.16",
        "@types/react-bootstrap": "^0.32.20",
        "@types/react-dom": "^16.9.4",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-timeago": "^4.1.1",
        "@types/stripe-v3": "^3.1.11",
        "@types/url-join": "^4.0.0",
        "@types/uuid": "^3.4.6",
        "axios": "^0.19.0",
        "bcryptjs": "^2.4.3",
        "bibtex-parser-js": "0.0.2",
        "bootstrap": "^4.1.1",
        "classnames": "^2.2.6",
        "cookie": "^0.4.0",
        "decko": "^1.2.0",
        "html-entities": "^1.2.1",
        "html-to-text": "^5.1.1",
        "lodash": "^4.17.4",
        "markdown-to-jsx": "^6.11.0",
        "mobx": "^5.15.1",
        "mobx-react-lite": "^1.5.2",
        "moment": "^2.17.1",
        "node-sass": "^4.9.0",
        "npm-run-all": "^4.1.5",
        "object-to-formdata": "^2.2.0",
        "parcel-bundler": "^1.12.4",
        "react": "^16.13.1",
        "react-bootstrap": "^1.0.0-beta.16",
        "react-dom": "^16.13.1",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "react-stripe-elements": "^6.0.1",
        "react-timeago": "^4.4.0",
        "typescript-memoize": "^1.0.0-alpha.3",
        "url-join": "^4.0.1",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@cloudflare/wrangler": "^1.8.2",
        "@dollarshaveclub/cloudworker": "github:foldspark/cloudworker",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
