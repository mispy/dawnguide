{
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "[typescriptreact]": {
        "editor.formatOnSave": true
    },
    "files.exclude": {
        "node_modules/": true,
        "tmp/": true,
        "client/dist/": true,
        "client/devdist/": true,
        "server/dist/": true,
        "server/devdist/": true
    },
    "eslint.workingDirectories": [
        {
            "directory": "client",
            "changeProcessCWD": true
        },
        {
            "directory": "server",
            "changeProcessCWD": true
        },
        {
            "directory": "concepts",
            "changeProcessCWD": true
        },
        {
            "directory": "shared",
            "changeProcessCWD": true
        },
        {
            "directory": "cfscripts",
            "changeProcessCWD": true
        }
    ]
}